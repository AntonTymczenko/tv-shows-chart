.controls-header_fixed + main
  margin-top: 6.875rem
.row
  grid-template-columns: 10% 9% 6% auto 6% 7% 23% 11%;
  grid-template-rows: auto

.chart__head, .chart__item
  padding: 0 0.5rem

.chart__head
  display: grid
.chart__item
  border: none
  border-radius: 0
  &:not(:last-child)
    border-bottom: 1px solid rgba(200,200,200,0.5)
.cell_title
  font-weight: normal
  font-size: 1rem
.cell_compact, .cell_genres .legend
  display: none
.cell_watchers, .cell_rating, .cell_year, .cell_country, .cell_links
  display: block

.search__sorting
  display: none
