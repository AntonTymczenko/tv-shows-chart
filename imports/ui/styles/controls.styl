.search
  width: 100%
  max-width: 420px
.search__query
  width: 100%
  display: inline-flex
  flex: 1 1 300px
  border: 1px solid #ccc
  border-radius: 0.5rem
  overflow: hidden

searchMain = 2rem
.search__input
  height: searchMain
  border: 0
  padding: 0 0.5rem
  flex: 1

.search__button
  width: searchMain
  background-repeat: no-repeat
  background-position: top left
  background-size: searchMain
  border: 0
  padding: 0
  border-radius: 0
  color: white
  cursor: pointer

.search__button_submit
  background-image: url('/search.svg')
.search__button_controls
  background-image: url('/arrow_drop_down.svg')
.search__button_controls_active
  background-image: url('/arrow_drop_up.svg')

