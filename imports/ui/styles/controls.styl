.search
  padding: 0 0.5rem
  width: 100%
  max-width: 420px
  box-sizing: border-box
.search__query
  width: 100%
  display: inline-flex
  flex: 1 1 300px
  border: 1px solid #ccc
  border-radius: 0.5rem
  overflow: hidden

searchMain = 2rem
.search__input
  height: searchMain
  border: 0
  padding: 0 0.5rem
  flex: 1

.search__button
  width: searchMain
  background-repeat: no-repeat
  background-position: top left
  background-size: searchMain
  border: 0
  padding: 0
  border-radius: 0
  color: white

.search__button_submit
	background-image: url('/search.svg'),
	  linear-gradient(to bottom, #ffffff 0%,#e5e5e5 100%);
.search__button_controls
	background-image: url('/arrow_drop_down.svg'),
	  linear-gradient(to bottom, #ffffff 0%,#e5e5e5 100%);
.search__button_controls_active
	background-image: url('/arrow_drop_up.svg'),
	  linear-gradient(to bottom, #ffffff 0%,#e5e5e5 100%);
.switch
  display: flex
  justify-content: space-between
  align-items: center
  margin: 0.5rem 0 0 0
.sync-status
  margin: 0.5rem 0

.switch input
  opacity: 0
  width: 0
  height: 0

.switch__label
  opacity: 1

sliderSize = 1.6rem
.switch__slider-container
  position: relative
  display: inline-block
  width: 1.76 * sliderSize
  height: sliderSize
.switch__slider
  position: absolute
  cursor: pointer
  top: 0
  left: 0
  right: 0
  bottom: 0
  border-radius: sliderSize
  background-color: #ccc
  -webkit-transition: .1s
  transition: .1s

.switch__slider:before
  position: absolute
  content: ""
  height: 0.76 * sliderSize
  width: 0.76 * sliderSize
  left: 4px
  bottom: 4px
  border-radius: 50%
  background-color: white
  -webkit-transition: .1s
  transition: .1s

input:checked + .switch__slider
  background-color: #2196F3

input:focus + .switch__slider
  box-shadow: 0 0 1px #2196F3

input:checked + .switch__slider:before
  -webkit-transform: translateX(0.76 * sliderSize)
  -ms-transform: translateX(0.76 * sliderSize)
  transform: translateX(0.76 * sliderSize)

.search__sorting .select-css
  width: 12rem

@import './styles/select'
