body
  margin: 0
  font-size: 16px
  font-family: sans-serif
.container
  padding: 1rem
  max-width: 1100px
  margin: 0 auto
.row
  padding-top: 1rem
  display: grid
  grid-gap: 0.8rem;
  justify-content: stretch
  .cell
    display: inline-block
    place-self: stretch

.sync-status
  display: inline-block
  padding-left: 1rem
.chart__head
  display: none
  .sortable
    cursor: pointer
  .active
    text-decoration: underline
    &.asc:after
      content: ' ▲'
    &.desc:after
      content: ' ▼'
.chart__item
  img.poster
    width: 100%
  img.flag
    width: 1.5rem
  .link
    display: inline-block;
    width: linkSize = 24px
    height: linkSize
    &:not(:last-child)
      padding-right: 0.5rem
    &:after
      content: ""
      background-size: contain
      display: inline-block;
      width: linkSize
      height: linkSize
      background-repeat: no-repeat
    &.link_yt:after
      background-image: url("/youtube.svg")
    &.link_imdb:after
      background-image: url("/imdb.png")
    &.link_home:after
      background-image: url("/home.png")

.pagination
  ul, li
    display: inline-block
  li
    height: auto
    &.active
      font-weight: bold
    a
      border-radius: 0.4rem 1.2rem 0.4rem
      padding: 1rem
    &:not(.disabled)
      a
        cursor: pointer
        &:hover, &:active, &:focus
          background: linen

/* SMALL */
@media (max-width: 499px)
  @import './styles/s'

/* MEDIUM */
@media (min-width: 500px) and (max-width: 979px)
  @import './styles/m'

/* LARGE */
@media (min-width: 980px)
  @import './styles/l'
