body
  font-size: 16px
.pagination
  ul, li
    display: inline-block
  li
    height: auto
    &.active
      font-weight: bold
    &:not(.disabled)
      a
        border-radius: 0.4rem 1.2rem 0.4rem
        padding: 1rem
        cursor: pointer
        &:hover, &:active
          background: linen
