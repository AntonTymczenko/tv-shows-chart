body
  margin: 0
  font-size: 16px
  font-family: sans-serif
.container
  padding: 1rem
  max-width: 1100px
  margin: 0 auto
.row
  padding-top: 1rem
  display: grid
  grid-gap: 0.8rem;
  justify-content: stretch
  .cell
    place-self: stretch
    p:first-child
      margin-top: 0
    p:last-child
      margin-bottom: 0
.cell_title
  font-size: 1.2rem
  font-weight: 700
  height: 2rem
.cell_watchers, .cell_rating, .cell_year, .cell_country, .cell_links
  display: none

.sync-status
  display: inline-block
  padding-left: 1rem
.chart__head
  display: none
  .sortable
    cursor: pointer
  .active
    text-decoration: underline
    &.asc:after
      content: ' ▲'
    &.desc:after
      content: ' ▼'
.chart__item
  border: 1px solid rgba(200,200,200,0.5)
  border-radius: 0.5rem
  margin: 0.5rem 0
  img.poster
    border-radius: 0.5rem
    width: 100%
  img.flag
    width: 1.5rem
  .link
    display: inline-block;
    width: linkSize = 24px
    height: linkSize
    &:not(:last-child)
      padding-right: 0.5rem
    &:after
      content: ""
      background-size: contain
      display: inline-block;
      width: linkSize
      height: linkSize
      background-repeat: no-repeat
    &.link_yt:after
      background-image: url("/youtube.svg")
    &.link_imdb:after
      background-image: url("/imdb.png")
    &.link_home:after
      background-image: url("/home.png")
.chart__head, .chart__item
  padding: 0.5rem

.pagination
  ul, li, a
    display: inline-block
  li
    &.active
      font-weight: bold
    .isvg
      height: 100%
      line-heigth: 100%
      display: inline-block
      svg
        vertical-align: middle;
    a, .isvg
      text-align: center
      width: 3rem
    a
      height: 3rem
      line-height: 3rem
      border-radius: 0.4rem 1.2rem 0.4rem
    &:not(.disabled)
      a
        cursor: pointer
        &:hover, &:active, &:focus
          background: linen

/* SMALL */
@media (max-width: 499px)
  @import './styles/s'

/* MEDIUM */
@media (min-width: 500px) and (max-width: 979px)
  @import './styles/m'

/* LARGE */
@media (min-width: 980px)
  @import './styles/l'
