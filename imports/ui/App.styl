body
  margin: 0
  padding: 1rem
  font-size: 16px
  font-family: sans-serif
.chart > div
  width: 100%
  padding-top: 1rem
  display: grid
  grid-template-columns: 10% 10% 6% 25% 6% 7% 25% 11%
  justify-content: stretch
  .cell
    display: inline-block
    place-self: stretch
.sync-status
  display: inline-block
.chart__head
  .sortable
    cursor: pointer
  .active
    text-decoration: underline
    &.asc:after
      content: ' ▲'
    &.desc:after
      content: ' ▼'
.chart__item
  .cell
    height: 5rem
  img.poster
    height: 100%
  img.flag
    width: 1.5rem
  .link
    display: inline-block;
    width: linkSize = 24px
    height: linkSize
    &:not(:last-child)
      padding-right: 0.5rem
    &:after
      content: ""
      background-size: contain
      display: inline-block;
      width: linkSize
      height: linkSize
      background-repeat: no-repeat
    &.link_yt:after
      background-image: url("/youtube.svg")
    &.link_imdb:after
      background-image: url("/imdb.png")
    &.link_home:after
      background-image: url("/home.png")

.pagination
  ul, li
    display: inline-block
  li
    height: auto
    &.active
      font-weight: bold
    a
      border-radius: 0.4rem 1.2rem 0.4rem
      padding: 1rem
    &:not(.disabled)
      a
        cursor: pointer
        &:hover, &:active, &:focus
          background: linen
